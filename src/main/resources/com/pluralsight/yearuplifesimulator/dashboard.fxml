<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pluralsight.yearuplifesimulator.GameController">
   <top>
      <Label fx:id="titleLabel" text="Life: Year Up Edition" textAlignment="CENTER" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <HBox fx:id="diceBox" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="dice1" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="dice2" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </center>
   <right>
      <VBox fx:id="statsBox" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Label fx:id="eventLabel" text="Label" />
            <Label fx:id="balanceLabel" text="Label" />
         </children>
      </VBox>
   </right>
   <bottom>
      <HBox fx:id="buttonBox" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="rollButton" accessibleText="Roll Dice" mnemonicParsing="false" onAction="#onRollDice" text="Roll Dice" />
            <Button fx:id="resetButton" accessibleText="Reset Game" mnemonicParsing="false" onAction="#onResetGame" text="Reset Game" />
            <Button fx:id="ledgerButton" accessibleText="View Ledger" mnemonicParsing="false" onAction="#onViewLedger" text="View Ledger" textAlignment="CENTER" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
